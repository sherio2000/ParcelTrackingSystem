@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<meta charset="utf-8">

<head>
	<title>Admin Login</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->	
	<link rel="stylesheet" type="text/css" href="../../css/loginstyle.css"/>
    <link rel="stylesheet" type="text/css" href="../../css/flaticon.css"/>

</head>
<body>
    <form id="account" method="post" class="login-form">
      <p class="login-text">
        <span class="fa-stack fa-lg">
          <i class="flaticon-lock"></i>
          <i class="fa fa-lock fa-stack-1x"></i>
        </span>
      </p>
      <div class="form-group">
      <input asp-for="Input.Email" autocomplete="username" aria-required="true" type="email" class="login-username" autofocus="true" required="true" placeholder="Email" />
      <input type="password" class="login-password" asp-for="Input.Password" autocomplete="current-password" aria-required="true" required="true" placeholder="Password" />
       <div class="checkbox">
        <label asp-for="Input.RememberMe" class="form-label" style="color: white; padding-left: 20px;">
            <input class="form-check-input" asp-for="Input.RememberMe" />
            @Html.DisplayNameFor(m => m.Input.RememberMe)
        </label>
       </div>
      <button id="login-submit" type="submit" class="login-submit">Log in</button>
      </div>
    </form>
<div class="underlay-photo"></div>
<div class="underlay-black"></div>
</body>
